<?xml version="1.0" encoding="utf-8"?>
<!--
    Disclaimer:
    Layout is intentionally done without ConstraintLayout as I found it significantly quicker to
    prototype interface without it and move to ConstraintLayout in case app meets with UI performance
    issues
-->
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_dark">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/credentials_title"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/white"
                android:background="@color/blue_light"
                android:gravity="center_vertical"
                android:text="Your credentials" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/contact_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/credentials_title">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your cell or email"
                    tools:text="+7 910 900 87 70"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/secret_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contact_container">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/secret"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your secret"
                    tools:text="God is love"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/profile_title"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/white"
                android:background="@color/blue_light"
                android:gravity="center_vertical"
                android:layout_below="@id/secret_container"
                android:text="Profile" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/name_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_title">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your name"
                    tools:text="Jane Ostin"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/offers_title"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_below="@+id/name_container"
                android:background="@color/blue_light"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Offers"
                android:textColor="@color/white" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/offers_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/offers_title">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/offers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter what valuable do you offer to others"
                    tools:text=""/>

            </com.google.android.material.textfield.TextInputLayout>
            
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/offers_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/offers_container"/>

            <TextView
                android:id="@+id/demands_title"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_below="@+id/offers_list"
                android:background="@color/blue_light"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Demands"
                android:textColor="@color/white" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/demands_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/demands_title">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/demands"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter what do you interest to receive"
                    tools:text=""/>

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/demands_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/demands_container"/>

        </RelativeLayout>

    </ScrollView>
</layout>